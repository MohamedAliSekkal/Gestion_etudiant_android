<?xml version="1.0" encoding="utf-8"?>
<!-- Primary Button Background with Gradient and States -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/info"
                android:endColor="@color/info_dark"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_disabled" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/info_light"
                android:endColor="@color/info"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector>

