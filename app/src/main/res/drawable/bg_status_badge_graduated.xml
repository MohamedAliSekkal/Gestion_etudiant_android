<?xml version="1.0" encoding="utf-8"?>
<!-- Graduated Status Badge - Blue badge for graduated students -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <solid android:color="@color/status_graduated_background" />
    
    <corners android:radius="12dp" />
    
    <stroke
        android:width="1dp"
        android:color="@color/status_graduated" />
    
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
    
</shape>

