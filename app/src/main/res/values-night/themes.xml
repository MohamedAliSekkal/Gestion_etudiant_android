<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudentManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (Dark theme) -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color (Dark theme) -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors (Dark theme) -->
        <item name="android:colorBackground">@color/text_primary</item>
        <item name="colorSurface">@color/primary_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>